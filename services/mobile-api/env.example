# Server Configuration
NODE_ENV=development
PORT=8082
HOST=0.0.0.0

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/openpolicy_mobile
MONGODB_OPTIONS_MAX_POOL_SIZE=10
MONGODB_OPTIONS_SERVER_SELECTION_TIMEOUT_MS=5000
MONGODB_OPTIONS_SOCKET_TIMEOUT_MS=45000

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=15m
JWT_REFRESH_EXPIRES_IN=7d

# Bcrypt Configuration
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# API Configuration
API_VERSION=v1
API_PREFIX=/api/mobile
API_TIMEOUT=30000

# File Upload Configuration
MAX_FILE_SIZE=10485760
ALLOWED_FILE_TYPES=image/jpeg,image/png,image/gif,application/pdf

# External Services
DATA_SERVICE_URL=http://data-service:8000
SEARCH_SERVICE_URL=http://search-service:8001
ADMIN_SERVICE_URL=http://admin-service:8002

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=logs/mobile-api.log

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=10000

# Mobile Features
PUSH_NOTIFICATIONS_ENABLED=true
OFFLINE_SUPPORT_ENABLED=true
DATA_SYNC_ENABLED=true

# Health Check Configuration
HEALTH_CHECK_TIMEOUT=5000
HEALTH_CHECK_INTERVAL=30000

# Security Configuration
CORS_ORIGIN=http://web:3000,http://admin:3001
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# Development Configuration
NODE_ENV=development
DEBUG=mobile-api:*
NODEMON_ENABLED=true
