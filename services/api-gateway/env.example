# OpenPolicy API Gateway Environment Configuration

# Server Configuration
GATEWAY_PORT=8000
GATEWAY_HOST=0.0.0.0
NODE_ENV=development

# CORS Configuration
CORS_ORIGIN=http://localhost:3000,http://localhost:8001,http://localhost:8002,http://localhost:8003

# Authentication & Security
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Service URLs
WEB_APP_URL=http://localhost:8001
ADMIN_DASHBOARD_URL=http://localhost:8002
MOBILE_API_URL=http://localhost:8002
ETL_SERVICE_URL=http://localhost:8003
GO_API_URL=http://localhost:8080
DJANGO_BACKEND_URL=http://localhost:8001
LARAVEL_BACKEND_URL=http://localhost:8002

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/openpolicy_gateway
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# Logging Configuration
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE=logs/api-gateway.log
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
HEALTH_CHECK_INTERVAL=30000
HEALTH_CHECK_TIMEOUT=10000

# API Documentation
SWAGGER_ENABLED=true

# Feature Flags
FEATURE_AUTH=true
FEATURE_RATE_LIMITING=true
FEATURE_CIRCUIT_BREAKER=true
FEATURE_CACHING=true
FEATURE_MONITORING=true
FEATURE_LOGGING=true

# Cache Configuration
CACHE_TTL=300
CACHE_CHECK_PERIOD=600
CACHE_MAX_KEYS=1000

# Proxy Configuration
PROXY_TIMEOUT=30000
PROXY_FOLLOW_REDIRECTS=true
PROXY_CHANGE_ORIGIN=true
PROXY_SECURE=false

# Test Environment Overrides
TEST_MONGODB_URI=mongodb://localhost:27017/openpolicy_gateway_test
TEST_REDIS_DB=1
